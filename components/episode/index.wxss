/* components/classic/episode.wxss */
.episode-container {
  height: 60rpx;
  display: inline-flex; /*宽度自适应*/
  flex-direction: row;
}

.index-container {
  display: flex;
  flex-direction: row;
  align-items: baseline;
}

.plain {
  font-size: 32rpx;
}

.index {
  font-weight: 800;
  font-size: 60rpx;
  line-height: 60rpx;
  margin-right: 14rpx;
}

.line {
  border-left: 1px solid black;
  height: 44rpx;
  margin-right: 14rpx;
  margin-bottom: 2rpx;
}

.date-container {
  display: flex;
  flex-direction: column;
  margin-top: 5rpx;
}

.month {
  font-size: 24rpx;
  line-height: 24rpx;
}

.year {
  font-size: 20rpx;
}